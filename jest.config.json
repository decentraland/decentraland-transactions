{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": ["<rootDir>/test"],
  "testMatch": ["**/*.spec.ts"],
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/**/*.d.ts",
    "!src/abis/**",
    "!src/contracts/index.ts"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": ["text", "lcov", "html"],
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  }
}
