{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "module": "commonjs",
    "target": "es6",
    "declaration": true,
    "lib": ["es2017", "dom"],
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "plugins": [{ "name": "tslint-language-service" }],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist", "build", "test", "scripts", "webpack"]
}
