{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "declaration": true,
    "lib": ["es2020", "dom"],
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "plugins": [{ "name": "tslint-language-service" }],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "importHelpers": true,
  },
  "exclude": ["node_modules", "dist", "esm", "cjs", "test", "scripts"]
}