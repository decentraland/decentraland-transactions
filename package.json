{
  "name": "decentraland-transactions",
  "version": "0.0.0-development",
  "main": "dist",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm run lint && npm run test && tsc --project tsconfig.json",
    "lint": "tslint --project tsconfig.json -e '*.json' -c tslint.json 'src/**/*.ts{,x}'",
    "test": "node --experimental-modules --es-module-specifier-resolution=node node_modules/.bin/nyc node_modules/mocha/bin/_mocha",
    "test:watch": "npm test -- --watch",
    "test:report": "npx nyc --silent --no-clean npm run test && npx nyc report --reporter=lcov --reporter=text"
  },
  "devDependencies": {
    "@dcl/schemas": "^1.1.1",
    "@microsoft/api-documenter": "^7.12.7",
    "@microsoft/api-extractor": "^7.13.2",
    "@rollup/plugin-json": "^4.1.0",
    "@types/chai": "^4.2.14",
    "@types/chai-as-promised": "^7.1.3",
    "@types/mocha": "^5.2.7",
    "@types/sinon": "^10.0.2",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "dcl-tslint-config-standard": "^3.0.0",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0",
    "prettier": "^1.10.2",
    "rimraf": "^2.6.3",
    "rollup": "^2.39.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "sinon": "^11.1.1",
    "ts-node": "^7.0.0",
    "tslint-config-prettier": "^1.10.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "@dcl/schemas": ">=1.1.1"
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "semi": false
  },
  "nyc": {
    "all": true,
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "text-summary"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/decentraland/decentraland-transactions.git"
  }
}
