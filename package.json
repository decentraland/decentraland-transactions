{
  "name": "decentraland-transactions",
  "version": "0.0.0-development",
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "exports": {
    ".": {
      "import": "./esm/index.js",
      "require": "./cjs/index.js"
    },
    "./crossChain": {
      "import": "./esm/crossChain/index.js",
      "require": "./cjs/crossChain/index.js"
    }
  },
  "files": [
    "esm",
    "cjs"
  ],
  "scripts": {
    "postbuild": "node scripts/postbuild.js",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build": "npm run build:esm && npm run build:cjs",
    "lint": "tslint --project tsconfig.json -e '*.json' -c tslint.json 'src/**/*.ts{,x}'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "convert-abi": "ts-node scripts/convertAbiToJson.ts",
    "extract-function-data": "ts-node scripts/extractFunctionDataWithABI.ts",
    "extract-tenderly-data": "ts-node scripts/extractFunctionDataForTenderly.ts"
  },
  "devDependencies": {
    "@dcl/schemas": "^19.4.1",
    "@jest/types": "^29.6.3",
    "@types/jest": "^29.5.12",
    "dcl-tslint-config-standard": "^3.0.0",
    "decentraland-connect": "^10.0.0",
    "ethers": "^5.6.8",
    "jest": "^29.7.0",
    "prettier": "^1.10.2",
    "rimraf": "^2.6.3",
    "ts-jest": "^29.1.2",
    "ts-node": "^7.0.0",
    "tslint-config-prettier": "^1.10.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@0xsquid/sdk": "2.8.25",
    "@0xsquid/squid-types": "0.1.78",
    "tslib": "^2.6.2"
  },
  "peerDependencies": {
    "@dcl/schemas": ">=1.1.1"
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "semi": false
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/decentraland/decentraland-transactions.git"
  }
}
